<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <div class= "field">
    <label for= "book-title">Title</label>
    <span class= "book-title"><%= f.text_field :title %></span>
  </div>

  <div class= "field">
    <label for= "book-body">Body</label>
    <span class= "book-body"><%= f.text_area :body %></span>
   </div>
  <div class= "action"><%= f.submit 'Update Book' %></div>
<% end %>

<%= link_to 'Show', book_path(@book.id) %>
